@section Scripts {

    <script type="text/javascript">
    $(document).ready(function () {
        $("#addtocart-btn").click(function (e) {
            e.preventDefault();
            var model = {};
            model.Id = $(this).data("id_product");
            model.Quantity = parseInt($("#ipQuantity").val());

          var kichThuocOption = $("label.size-option.active");
            if (kichThuocOption.length > 0) {
                model.KichThuoc = parseInt(kichThuocOption.find("input[name='KichThuoc']").val());
            }

            var mauSacOption = $("label.mauSac-option.active");
            if (mauSacOption.length > 0) {
                model.MauSac = parseInt(mauSacOption.find("input[name='MauSac']").val());
            }

            if (model.Quantity < 1) {
                model.Quantity = 1;
            }

            console.log(model);

            $.ajax({
                type: "POST",
                url: '@Url.Action("AddToCart", "Cart")',
                data: JSON.stringify(model),
                contentType: "application/json; charset=utf-8",
                success: function () {
                    var count = parseInt('@Session["count"]');
                    $('#CartCount').text(count + 1);
                    Swal.fire({
                        icon: 'success',
                        title: 'Thêm giỏ hàng thành công!',
                        showConfirmButton: false,
                        timer: 1500
                    })
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi trong khi thêm vào giỏ hàng',
                        text: 'Vui lòng thử lại!',
                        showConfirmButton: false,
                        timer: 1500
                    })
                }
            });
            return false;
        });
    });
    </script>

