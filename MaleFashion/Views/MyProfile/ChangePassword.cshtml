@model MaleFashion.Models.KhachHang
@{
    ViewBag.Title = "ChangePassword";
}
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            @using (Html.BeginForm("ChangePassword", "MyProfile", FormMethod.Post))
            {
                <div class="col-lg-12 col-md-12">
                    @Html.HiddenFor(model => model.MatKhau)
                    <h6 class="checkout__title">Đổi mật khẩu</h6>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <label for="oldPassword"></label>
                                <p>Mật khẩu cũ<span>*</span></p>
                                @Html.Password("oldPassword", null, new { @class = "form-control" })
                                <p style="color:red">@ViewBag.error</p>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="checkout__input">
                                <label for="newPassword"></label>
                                <p>Mật khẩu mới<span>*</span></p>
                                @Html.Password("newPassword", null, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>


                </div>
                <button style="float:right" type="submit" class="site-btn">Save</button>
            }
        </div>
    </div>
</section>


